
--- Build *.pb.go ---

protoc \
--proto_path=./proto/ \
--go_out=./pb --go_opt=paths=source_relative \
--go-grpc_out=./pb --go-grpc_opt=paths=source_relative \
user.proto

--- Run localy ---

go run cmd/main.go

--- Build docker image ---

docker build --tag 'grpc-tube' .

--- Run docker image ---

docker run -p 8080:8080 --detach 'grpc-tube'

--- END ---
